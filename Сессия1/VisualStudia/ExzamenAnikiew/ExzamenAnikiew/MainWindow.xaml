<Window x:Class="ExzamenAnikiew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExzamenAnikiew"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="400">
    <Grid Background="#FFA477A2">
        <StackPanel>
            <Label Content="Логин" HorizontalAlignment="Center"  Style="{StaticResource TitleLabel}" VerticalAlignment="Center"/>
            <TextBox Name="txbLogin" HorizontalAlignment="Center" Height="23" Text="" VerticalAlignment="Center" Width="160"/>
            <Label Content="Пароль"  Style="{StaticResource TitleLabel}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <PasswordBox Name="PbPassword" HorizontalAlignment="Center" Height="23" Width="160"/>
            <Button Content="Войти" Style="{StaticResource TitleButton}" HorizontalAlignment="Center" Height="33" Margin="10" Width="160" Click="Voiti_Click" Background="#FF230F64"/>
        </StackPanel>
    </Grid>
</Window>
